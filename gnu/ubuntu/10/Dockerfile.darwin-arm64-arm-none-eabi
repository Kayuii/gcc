FROM kayuii/alpine-glibc:v2.23 as downloader
LABEL maintainer "zcsevcik@gmail.com"

RUN apk --update --no-cache upgrade && \
    apk --update --no-cache add --virtual build-dependencies w3m wget openssl ca-certificates tar xz && \
    GCCARM_LINK="$(w3m -o display_link_number=1 -dump 'https://developer.arm.com/tools-and-software/open-source-software/developer-tools/gnu-toolchain/gnu-rm/downloads' | \
    grep -m1 '/gcc-arm-10.*-x86_64.*arm-none-eabi\.tar\.xz\?' | \
    sed -e 's/^\[[0-9]\+\] //')" && \
    wget -O /tmp/gcc-arm-x86_64_arm-none-eabi.tar.xz ${GCCARM_LINK}

FROM ubuntu:20.04

LABEL maintainer "577738@qq.com"
LABEL architecture="darwin-arm64"
LABEL gcc-version="10"
LABEL target="arm-none-eabi"

# 设置环境变量
ENV DEBIAN_FRONTEND=noninteractive
ENV PATH="/usr/local/bin:${PATH}"
ENV ARCH="arm"
ENV CROSS_COMPILE="arm-none-eabi-"

COPY --from=downloader /tmp/gcc-arm-x86_64_arm-none-eabi.tar.xz /tmp/gcc-arm-x86_64_arm-none-eabi.tar.xz

RUN apt-get update \
    && apt-get install -y --no-install-recommends \
    autoconf automake libtool pkg-config make cmake git curl \
    wget tar xz-utils ca-certificates build-essential && \
    tar xf /tmp/gcc-arm-x86_64_arm-none-eabi.tar.xz --strip-components=1 -C /usr/local/ && \
    rm -rf /tmp/gcc-arm-x86_64_arm-none-eabi.tar.xz && \
    cd /usr/local/bin && \
    ls | awk -F "arm-none-eabi-" '{print "ln -s", $0,"arm-none-eabi-"$2}' | sh && \
    apt-get clean && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# 验证安装
RUN arm-none-eabi-gcc --version && \
    arm-none-eabi-g++ --version && \
    arm-none-eabi-objdump --version

# 设置默认编译器
RUN echo 'export PATH="/usr/local/bin:$PATH"' >> /etc/profile && \
    echo 'export CROSS_COMPILE="arm-none-eabi-"' >> /etc/profile && \
    echo 'export ARCH="arm"' >> /etc/profile

WORKDIR /opt/
